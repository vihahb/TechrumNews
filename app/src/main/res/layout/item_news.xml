<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_210"
    android:background="@drawable/radius_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round_bottom_black_55"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_author_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingBottom="@dimen/size_0"
                android:paddingEnd="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:singleLine="false"
                android:text="Dong Nguyen"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_13"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_title_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/size_8"
                android:singleLine="false"
                android:text="Hướng dẫn nhận 3 tháng xem phim trên iflix hoàn toàn miễn phí"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>